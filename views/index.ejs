
<html>
	
	<head>
		
		<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">

<!-- jQuery library -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
		
	</head>
	
	
<body>
	
	<div class = "container">
	<h1>Enter Details</h1>	
	 <form method = "POST"  action = "/index" >
    <div class="form-group" id = "usernamee">
      <label for="usr">Register Number:</label>
      <input type="text" class="form-control" id="username" name="username" autocomplete="off">
    </div>
    <div class="form-group" id = "passwordd">
      <label for="pwd">Confirm Register Number:</label>
      <input type="text" class="form-control" id="password" name = "password">
    </div>
        <div class="form-group" id = "namee">
      <label for="pwd">Name:</label>
      <input type="text" class="form-control" id="name" name = "name">
    </div>
    
    <h2 id = "uname">     </h2>
    
    
    
   <div id = "deptt">   <h4><strong>Select Department:</strong></h4> 
        <div class="radio" >
      <label><input type="radio" name="dept"  value = "ECE">ECE</label>
    </div>
    <div class="radio">
      <label><input type="radio" name="dept" value = "EEE">EEE</label>
    </div>
    <div class="radio ">
      <label><input type="radio" name="dept" value = "IT" >IT</label>
    </div>
        <div class="radio ">
      <label><input type="radio" name="dept" value = "CSE">CSE</label>
    </div>
            <div class="radio ">
      <label><input type="radio" name="dept" value = "MECH">MECH</label>
    </div>  </div>
    
        <h3 id = "depart"></h3>


    <button type="submit" value = "submit" class="btn btn-success">Success</button>
    
    
  </form>
		
		
	</div>

	
	
	
	<p id = "display"></p>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  
  <script>
  


$(document).ready(function(){
  $("#username").focusout(function(){
      var id = document.querySelector("#username").value;
     
    $.ajax({type : "GET" , url : '/ajax/chuser/'+id , success: function(data) {
        if(data == "err") 
        {
        	$('#usernamee').show();
        	$('#passwordd').show();
			$('#namee').show();
			$('#deptt').show();
        }
        else
        {
        	$('#passwordd').hide();
        	$('#namee').hide();
        	$('#deptt').hide();
        	document.querySelector('#uname').innerHTML = data.name;
        	document.querySelector('#depart').innerHTML = data.dept;
        }
    } , error: function(err) {
        console.log(err);
    }  });
  });
});

</script>
	
	
	
</body>	
	
	
</html>



